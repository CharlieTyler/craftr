<!-- Look into using a table instead: https://v4-alpha.getbootstrap.com/content/tables/ -->

<div class = "container">
  <div class = "row">
    <%= render partial: 'checkout/checkout_progress', locals: {order: @order} %>
  </div>
  <div class = "row">
    <div class = "col-12">
      <h3>Your basket</h3>
      <% if @order.order_items.present? %>
        <div class="basket-header">
          <div class="row">
            <%= simple_form_for @order, url: checkout_update_shipping_method_path, html: { class: "col-12" } do |f| %>
              <table class="table col-12">
                <thead>
                  <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Subtotal</th>
                    <th scope="col">Remove</th>
                  </tr>
                </thead>
                <tbody>
                  <% @order_items.each do |oi| %>
                    <tr>
                      <th scope="row"><%= image_tag oi.product.product_images.first.photo_url(:thumb).to_s, class: "img-fluid" %><%= link_to oi.product.name, product_path(oi.product) %></th>
                      <td><%= number_to_currency((oi.product.price.to_f / 100), unit: "£") %></td>
                      <td><%= oi.quantity %></td>
                      <td><%= number_to_currency((oi.subtotal_in_pence.to_f / 100), unit: "£") %></td>
                      <td><%=link_to "Remove", order_item_path(oi), method: :delete %></td>
                    </tr>
                    <% unless oi.product.is_transactional %>
                      <tr class = "alert alert-danger">
                        <th scope="row">Info</th>
                        <td colspan="4">We are currently out of stock of <%= oi.product.name %>, please <%=link_to "remove from cart", order_item_path(oi), method: :delete %> to continue</td>
                      </tr>
                    <% end %>
                  <% end %>
                  <tr>
                    <th scope = "row"><i class="fa fa-truck" aria-hidden="true"></i> Delivery</th>
                    <td><%= f.input :shipping_type_id, as: :radio_buttons, collection: ShippingType.all.map{ |st| [st.full_shipping_type, st.id] }, label_method: :first, value_method: :last, item_label_class: 'radio', checked: @default_shipping_type.id, label: "" %>
                      <% if @order.total_unpaid_quantity > 1 %>
                        <p><em><%= number_to_currency(@default_shipping_type.price.to_f / (100 * @order.total_unpaid_quantity), unit: "£") %> shipping per bottle</em></p>
                      <% end %>
                    </td>
                    <td>1</td>
                    <td><%= number_to_currency((@default_shipping_type.price.to_f / 100), unit: "£") %></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope = "row">To pay: </th>
                    <td colspan = "2"></td>
                    <td><strong><%= number_to_currency(((@order.total_unpaid_product_amount + @default_shipping_type.price.to_f) / 100), unit: "£") %></strong></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope = "row" colspan = "5">
                      <%= f.submit "Next: Add delivery address", class: "btn btn-primary col-12" %>
                    </th>
                  </tr>
                </tbody>
              </table>
            <% end %>
          </div>
        </div>  
      <% else %>
        <p class = "mt-5 mb-0">Add some <%= link_to "products", products_path, class: "text-primary" %> to your cart to continue. How about some: </p>
        <ul>
          <% navbar_categories.each do |category| %>
            <li><%= link_to category.name, category_path(category), class: "text-primary" %></li>
          <% end %> 
        </ul>
      <% end %>
    </div>
  </div>
</div>

