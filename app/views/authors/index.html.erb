<div class = "container-fluid">
  <div class = "owl-carousel owl-theme article-carousel">
    <%= render partial: "articles/carousel_article", collection: @featured_articles, as: :article %>
  </div>
</div>

<div class = "container-fluid">
  <div class = "row">
    <div class = "col-md-10 offset-md-1">
      <h1 class = ""><%= title 'Our mixologists' %></h1>
      <div class = "row">
        <%= render partial: "authors/lister_author", collection: @authors, as: :author %>
      </div>
      <div class = "row">
        <div class = "col-12 text-center">
          <%= will_paginate @authors, :page_links => false %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(function(){
    $('.owl-carousel.article-carousel').owlCarousel({
      stagePadding: 0,
      loop:true,
      dots: true,
      items: 1,
      nav: true,
      navText : ['<i class="fa fa-4x fa-angle-left" aria-hidden="true"></i>','<i class="fa fa-4x fa-angle-right" aria-hidden="true"></i>']
    });
  });
</script>
