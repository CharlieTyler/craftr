                        <%= link_to category_path(category), class: "dropdown-item" do %>
                          <%= image_tag category.icon, height: "100px" %>
                          <br />
                          <%= category.name %>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                  <div class = "row">
                    <div class = "col-8 offset-2">
                      <%= link_to "Browse by distillery", distilleries_path, class: "btn btn-primary col-12" %>
                    </div>
                  </div>
                </div>
              </div>
            </li>
            <li class="nav-item">
              <%= link_to "Recipes", recipes_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Articles", articles_path, class: "nav-link" %>
            </li>
          </ul>
          <ul class="navbar-nav float-right">
            <li class = "nav-item">
              <i class="fas fa-search fa-2x text-primary"></i>
            </li>
            <li class = "nav-item">
              <div class = "search-show-hide">
                <%= form_tag search_path, method: :get, class: "form-inline my-2 my-lg-0" do %>
                  <%= text_field_tag :keyword, nil, :placeholder => "Search for products, recipes and articles...", class: "form-control search-box mr-sm-2", type: "search" %>
                  <%= submit_tag "Search", class: "btn btn-secondary my-2 my-sm-0" %>
                <% end %>
