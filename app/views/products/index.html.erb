<div class = "container-fluid">
  <div class = "row">
    <div class = "col-12">
      <h1><%= title 'All products' %></h1>
      <%= form_tag(products_path, method: :get, class: "col-12" ) do %>
        <p class = "mb-0 mt-2 text-white">Instrument: </p>
        <div class = "col-6 col-md-3 my-2 mx-0">
          <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name, params[:category_id]), multiple: true, class: "multiselect" %>
        </div>
        <p class = "mb-0 mt-2 text-white">Genre: </p>
        <div class = "col-6 col-md-3 my-2 mx-0">
        <%= select_tag :distillery_id, options_from_collection_for_select(Distillery.all, :id, :name, params[:distillery_id]), multiple: true, class: "multiselect" %>
        </div>
        <%= submit_tag "Search", class: "btn btn-primary col-12 col-md-2 mt-2" %>
      <% end %>
      <div class = "row">
        <%= render partial: "lister_item", collection: @products, as: :product %>
      </div>
      <div class = "row">
        <div class = "col-12 text-center">
          <%= will_paginate @products, :page_links => false %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    $('.multiselect').multiselect();
  });
</script>
