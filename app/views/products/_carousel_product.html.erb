<div class="row hero-row py-5 bg-overlay" style="background: linear-gradient(rgba(365,365,365,0.5), rgba(365,365,365,0.9)), url('<%= product.distillery.summary_image_url(:full).to_s %>'); background-position: center; background-repeat: no-repeat; background-size: cover;">
  <div class = "col-md-6 text-center">
    <div class = "row">
      <div class = "col-6 offset-3 col-md-8 offset-md-2">
        <%= link_to product_path(product) do %>
          <%= image_tag product.product_images.first.photo_url(:full).to_s, class: "img-fluid image-border" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class = "col-md-6 text-center my-md-5 py-md-5">
    <h1 class = "my-3 display-4"><%= link_to product.name, product_path(product) %></h1>
    <h2>by <%= link_to product.distillery.name, distillery_path(product.distillery), class: "text-primary" %></h2>
    <h6 class = "my-3 text-muted"><%= "#{product.size_ml}ml - #{product.alcohol_percentage}%" %></h6>
    <h4><%= render partial: "products/star_rating", locals: {product: product} %></h4>
    <h3 class = "text-primary"><%= product.human_readable_price %></h3>
  </div>
</div>