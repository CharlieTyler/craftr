<div class = "container-fluid">
  <div class = "row">
    <div class = "col-md-6">

      <!-- Product images carousel -->
      <div id="productImageCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% @product.product_images.each_with_index do |photo, n| %>
            <li data-target='#productImageCarousel' data-slide-to="#{n}" class="#{'active' if n == 0}"></li>
          <% end %>
        </ol>
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <%= image_tag @product.product_images.first.photo, class: "d-block img-fluid product_image_large" %>
          </div>
          <% @product.product_images.drop(1).each do |product_image| %>
             <div class="item">
               <%= image_tag product_image.photo, class: "d-block img-fluid product_image_large" %>
             </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#productImagesCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#productImagesCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <!-- Product descriptions -->
    <div class = "col-md-6 pt-3">
      <h1 class = "display-4"><%= @product.name %></h1>
      <h6>by <%= link_to @product.distillery.name, distillery_path(@product.distillery) %></h6>

      <h6 class = "my-3 text-muted"><%= "#{@product.alcohol_percentage}%"%></h6>
      <h6 class = "my-4"><%= @product.average_review %></h6>
      <h3>We think</h3>
      <blockquote class="blockquote">
        <p class="mb-0"><%= @product.description_short %></p>
      </blockquote>
      <h3><%= "Â£#{@product.price}" %></h3>
      <div class = "row my-4">
        <div class="col-2">
          <input type = "number" name = "quantity" min = "1" max = "5" value = "1">
        </div>
        <div class = "col-10 btn btn-primary">Add to basket</div>
      </div>
    </div>
  </div>


  <!-- Mid product nav -->
  <div class = "row">
    <ul class="nav nav-pills nav-fill col-12">
      <li class="nav-item mid-nav">
        <a class="nav-link no-click" href="distillery">The distillery</a>
      </li>
      <li class="nav-item mid-nav">
        <a class="nav-link no-click" href="details">Product details</a>
      </li>
      <li class="nav-item mid-nav">
        <a class="nav-link no-click" href="recipes">Recipes</a>
      </li>
      <li class="nav-item mid-nav">
        <a class="nav-link no-click" href="reviews">Reviews</a>
      </li>
    </ul>
  </div>

  <!-- Distillery -->
  <div class = "row distillery">
    <div class = "col-10 offset-1 col-md-6 my-5 background-blue">
      <h1 class = "text-white"><%= @distillery.name %></h1>
      <p class = "text-white"><%= @distillery.description_short %></p>
    </div>
  </div>

  <!-- Product details -->
  <div class = "row details">
    <div class = "col-md-6">
      <%= image_tag @product.product_images.sample.photo, class: "d-block img-fluid product-page-image" %>
    </div>
    <div class = "col-md-6">
      <p class = "px-md-5 py-md-5"><%= @product.description_first %></p>
    </div>
    <div class = "col-md-6">
      <p class = "px-md-5 py-md-5"><%= @product.description_second %></p>
    </div>
    <div class = "col-md-6">
      <%= image_tag @product.product_images.sample.photo, class: "d-block img-fluid product-page-image" %>
    </div>
  </div>

  <!-- Recipes -->

  <!-- Reviews -->
  <div class = "row reviews">
    <div class = "col-12">
      <h1>Reviews</h1>
      <%= render partial: "review", collection: @product.reviews %>
      <div class = "clear"></div>
      <h1>Add a review</h1>
      <% if user_signed_in? %>
        <%= simple_form_for @review, url: product_reviews_path(@product) do |f| %>
          <%= f.input :rating, collection: 1..5 %>
          <%= f.input :message %>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      <% else %>
        <p>Please login or sign up to add a review</p>
      <% end %>
    </div>
  </div>




    </div>
  </div>
</div>

<script>
$(function () {
  //Make mid-point nav scroll to dedicated section on page
  $("mid-nav").find("a").click(function(e) {
      e.preventDefault();
      var section = $(this).attr("href");
      $("html, body").animate({
          scrollTop: $(section).offset().top
      });
  });
});
</script>