<div class = "col-6 col-md-4 col-lg-3 my-2">
  <%= link_to product_path(product) do %>
    <div class="card h-100">
      <div class = "card-img-top text-center">
        <% if product.product_images.present? %>
          <%= image_tag product.product_images.first.photo_url(:preview).to_s, class: "img-fluid lister-product-image" %>
        <% else %>
          <%= image_tag "booze_placeholder.jpg", class: "img-fluid" %>
        <% end %>
      </div>
      <div class="card-block">
        <h4 class="card-title"><%= product.name %></h4>
        <p class="card-text"><%= simple_format(truncate(product.description_short, length: 100)) %></p>
        <%= render partial: "products/star_rating", locals: {product: product} %>
        <%= link_to "See more", product_path(product), class: "btn btn-primary mt-auto" %>
      </div>
    </div>
  <% end %>
</div>