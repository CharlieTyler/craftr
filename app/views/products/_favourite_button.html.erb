<% if user_signed_in? %>
  <% if current_user.favourited_product?(product) %>
    <%= link_to product_favourite_product_path(current_user.user_favourite_products.find_by(product: product), product_id: product.id), class: "favourite-button col-12 article-text", method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true"></i> Favourited
    <% end %>
  <% else %>
    <%= link_to product_favourite_products_path(product_id: product.id), class: "favourite-button col-12 article-text", method: :post, remote: true do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i> Favourite
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_user_registration_path, class: "col-12 article-text" do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i> + Sign up to favourite
  <% end %>
<% end %>

<script>
  $('.favourite-button').click(function() {
    $('.favourite-button').html('<i class="fa fa-circle-o-notch fa-pulse" aria-hidden="true"></i>');
  });
</script>