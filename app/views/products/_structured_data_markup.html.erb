<script type="application/ld+json">
  {
    "@context" : "http://schema.org",
    "@type" : "Product",
    "name" : "<%= product.name %>",
    "image" : "<%= product.product_images.first.photo_url(:full).to_s %>",
    "description" : "<%= strip_tags(product.description_short) %>",
    "brand" : {
      "@type" : "Brand",
      "name" : "<%= product.distillery.name %>",
      "logo" : "<%= product.distillery.logo %>"
    },
    "sku": "<%= product.id %>",
    <% if product.GTIN.present? %>
      "gtin": <%= product.GTIN %>,
    <% end %>
    "offers" : {
      "@type" : "Offer",
      "price" : "<%= product.price.to_f / 100 %>",
      "priceCurrency" : "GBP",
      "availability" : "<%= product.is_in_stock ? 'InStock' : 'OutOfStock' %>",
      "priceValidUntil" : "<%= 1.year.from_now.to_date.iso8601 %>",
      "url" : "<%= product_url(product) %>"
    }
    <% if product.reviews.length > 0 %>
      ,
      "aggregateRating" : {
        "@type" : "AggregateRating",
        "ratingValue" : "<%= product.average_rating %>",
        "ratingCount" : "<%= product.reviews.length %>"
      }
    <% end %>
  }
</script>