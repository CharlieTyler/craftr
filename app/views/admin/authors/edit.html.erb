<div class = "container">
  <div class = "row">
    <div class = "col-md-6 offset-md-3">
      <%= simple_form_for @author, url: admin_author_path(@author) do |f| %>
        <%= f.input :name %>
        <%= f.input :location %>
        <%= f.input :bio %>
        <%= f.input :instagram_link %>
        <%= f.input :website_link %>
        <%= f.input :background_image %>
        <%= f.input :mugshot, hint: "this is a legacy field - no need to use, just go for bio_image instead" %>
        <%= f.input :bio_image, hint: "this is the actual primary image field" %>
        <%= f.input :user_id, collection: @users, value_method: :id, label_method: :email %>
        <%= f.submit "Update author", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
