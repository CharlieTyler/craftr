<div class = "container-fluid">
  <div class = "row">
    <div class = "col-10 offset-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <%= simple_form_for @category, url: admin_categories_path do |f| %>
        <%= f.input :name %>
        <%= f.input :icon %>
        <%= f.input :featured %>
        <br />
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div> 