<div class = "container-fluid">
  <div class = "row">
    <div class = "col-10 offset-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <%= simple_form_for @distillery, url: admin_distillery_path(@distillery) do |f| %>
        <%= f.input :name %>
        <%= f.input :location %>
        <%= f.input :logo %>
        <%= f.input :summary_text %>
        <%= f.input :summary_image %>
        <%= f.input :people_text, input_html: { class: 'quill_container' } %>
        <%= f.input :people_image %>
        <%= f.input :range_text, input_html: { class: 'quill_container' } %>
        <%= f.input :range_image %>
        <%= f.input :blurb_1, input_html: { class: 'quill_container' } %>
        <%= f.input :image_1 %>
        <%= f.input :blurb_2, input_html: { class: 'quill_container' } %>
        <%= f.input :image_2 %>
        <%= f.input :blurb_3, input_html: { class: 'quill_container' } %>
        <%= f.input :image_3 %>
        <%= f.input :website %>
        <%= f.input :facebook %>
        <%= f.input :instagram_user_id, hint: 'Use https://smashballoon.com/instagram-feed/find-instagram-user-id/ to get id from username' %>
        <%= f.input :longitude %>
        <%= f.input :latitude %>
        <br />
        <%= f.submit "Update", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div> 