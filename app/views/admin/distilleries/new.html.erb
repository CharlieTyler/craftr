<div class = "container-fluid">
  <div class = "row">
    <div class = "col-10 offset-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <%= simple_form_for @distillery, url: admin_distilleries_path do |f| %>
        <%= f.input :name %>
        <%= f.input :location %>
        <%= f.input :logo %>
        <%= f.input :summary_text, hint: 'Short description appears on lister page and in banner image' %>
        <%= f.input :summary_image, hint: 'Will be banner image' %>
        <%= f.input :people_text, input_html: { class: 'quill_container' } %>
        <%= f.input :people_image %>
        <%= f.input :range_text, input_html: { class: 'quill_container' } %>
        <%= f.input :range_image %>
        <%= f.input :blurb_1, input_html: { class: 'quill_container' } %>
        <%= f.input :image_1 %>
        <%= f.input :blurb_2, input_html: { class: 'quill_container' } %>
        <%= f.input :image_2 %>
        <%= f.input :blurb_3, input_html: { class: 'quill_container' } %>
        <%= f.input :image_3 %>
        <%= f.input :website, hint: 'Please include http://' %>
        <%= f.input :facebook, hint: 'Please include http://' %>
        <%= f.input :instagram_user_id, hint: 'Use https://smashballoon.com/instagram-feed/find-instagram-user-id/ to get id from username' %>
        <%= f.input :latitude, hint: 'first number in google maps url' %>
        <%= f.input :longitude, hint: 'second number, incl - sign, in google maps url' %>
        <br />
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div> 