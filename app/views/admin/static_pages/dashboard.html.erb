<div class = "container">
  <div class = "row">
    <div class = "col-12">
      <div class = "row">
        <%= link_to "Go to reporting dashboard", admin_reports_path, class: "btn btn-secondary col-12 my-2 mx-2" %>
      </div>
      <h4 class = "mt-4">Sales by product</h4>
      <%= line_chart Product.all.map { |product|
          {name: product.name, data: product.sold_items.group_by_week(:created_at).sum(:quantity)}
      } %>
      <h4 class = "mt-4">Cumulative user creation</h4>
      <%= line_chart User.group_by_day(:created_at).count %>
      <h6>New stuff</h6>
      <%= link_to "Category", new_admin_category_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Distillery", new_admin_distillery_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Product", new_admin_product_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Author", new_admin_author_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Article", new_admin_article_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Recipe", new_admin_recipe_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Distillery user", admin_users_path, class: "btn btn-primary my-2 mx-2" %>
    </div>

    <div class = "col-12 mt-3">
      <h6>Homepage carousel creations</h6>
      <%= link_to "Create", new_admin_carousel_feature_path, class: "btn btn-primary" %>
      <p>To edit or delete, please use admin controls on homepage</p>
    </div>

    <div class = "col-12 mt-3">
      <h6>Featured products and categories</h6>
      <%= link_to "Edit featured products and categories", admin_edit_features_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
