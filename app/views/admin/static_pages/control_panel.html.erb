<div class = "container">
  <div class = "row">
    <div class = "col-12">      
      <h4>New stuff</h4>
      <%= link_to "Category", new_admin_category_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Distillery", new_admin_distillery_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Product", new_admin_product_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Author", new_admin_author_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Article", new_admin_article_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Recipe", new_admin_recipe_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Distillery user", admin_users_path, class: "btn btn-primary my-2 mx-2" %>
    </div>
    <div class = "col-12">
      <h4>Vouchers</h4>
      <%= link_to "View all", admin_vouchers_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "New voucher", new_admin_voucher_path, class: "btn btn-primary my-2 mx-2" %>
    </div>
    <div class = "col-12">
      <hr class = "booyah-line my-2"/>
    </div>
    <div class = "col-12">
      <h4>Features</h4>
      <%= link_to "Homepage carousel", new_admin_carousel_feature_path, class: "btn btn-primary my-2 mx-2" %>
      <%= link_to "Edit featured products and categories", admin_edit_features_path, class: "btn btn-primary my-2 mx-2" %>
    </div>
    <div class = "col-12">
      <hr class = "booyah-line my-2"/>
    </div>
    <div class = "col-12">
      <h4>Test stuff</h4>
    </div>
    <div class = "col-md-6">
      <h6>Products</h6>
      <ul>
        <% @test_products.each do |product| %>
          <li><%= link_to product.name.titleize, product_path(product) %></li>
        <% end %>
      </ul>
    </div>
    <div class = "col-md-6">
      <h6 class = "mt-3">Distilleries</h6>
      <ul>
        <% @test_distilleries.each do |distillery| %>
          <li><%= link_to distillery.name, distillery_path(distillery) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
