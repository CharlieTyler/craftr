<div class = "container">
  <div class = "row">
    <%= render partial: 'checkout/checkout_progress', locals: {order: @order} %>
  </div>
  <div class = "row">
    <div class = "col-md-9">
      <div class = "row">
        <div class = "col-12">
          <h4>Select from your addresses or add a new one</h4>
          <%= simple_form_for @order, url: checkout_update_address_path do |f| %>
            <%= f.input :shipping_address_id, collection: current_user.addresses, label_method: :full_address_no_name, value_method: :id, include_blank: false %>
            <div class = "row">
              <%= f.submit "Next: Add payment details", class: "btn btn-primary col-12" %>
            </div>
          <% end %>
        </div>
        <button type="button" class="btn btn-secondary my-2 col-12" data-toggle="modal" data-target="#newAddressModal">
          Add new address
        </button>
      </div>
    </div>
    <div class = "col-md-3">
      <%= render partial: 'order_summary', locals: {order: @order} %>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="newAddressModal" tabindex="-1" role="dialog" aria-labelledby="newAddressModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newAddressModalLabel">New address</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for @address, url: checkout_create_address_path do |f| %>
        <div class="modal-body">
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :line_1 %>
          <%= f.input :line_2 %>
          <%= f.input :line_3 %>
          <%= f.input :post_town %>
          <%= f.input :postcode %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Add address", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  <% if current_user.addresses.length == 0 %>
    $("#newAddressModal").modal('show');
  <% end %>
</script>
