<div class = "container">
  <div class = "row">
    <%= render partial: 'checkout/checkout_progress', locals: {order: @confirmed_order} %>
  </div>
  <div class = "row">
    <div class = "col-12">
      <h4 class = "text-primary my-3"><i class="fa fa-smile-o" aria-hidden="true"></i> Order confirmed</h4>
      <p class = "text-muted">You will receive an email confirmation shortly. For reference, your order id is <%= @confirmed_order.id %></p>
    </div>
  </div>
  <div class = "row">
    <div class = "col-12">
      <%= render partial: 'checkout/orders/order_summary', locals: {order: @confirmed_order} %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-12">
      <hr class = "booyah-line my-3" />
    </div>
  </div>
  <div class = "row">
    <div class = "col-12">
      <h4>In the meantime, here are some recipes you might like to try</h4>
      <p class = "text-muted">Hint: favourite the ones you want to try so you can find them later!</p>
    </div>
    <div class = "col-12">
      <div class = "row">
        <%= render partial: 'recipes/lister_recipe', collection: @relevant_recipes, as: :recipe, locals: { md_upwards_col: "3" }  %>
      </div>
    </div>
  </div>
</div>
