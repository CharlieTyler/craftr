<div class = "pb-2">
  <div class = "card">
    <div class = "card-block py-1 px-1">
      <h4 class = "card-title">Order summary</h4>
      <% order.order_items.each do |oi| %>
        <div class = "d-inline-block">
          <p><%= "#{oi.product.name} * #{oi.quantity}" %></p>  
        </div>
        <div class = "d-inline-block float-right">
          <p><strong><%= number_to_currency((oi.subtotal_in_pence / 100).to_f, unit: "£") %></strong></p>
        </div> 
      <% end %>
      <% if order.shipping_type.present? %>
        <div class = "d-inline-block">
          <p><%= order.shipping_type.name %></p>  
        </div>
        <div class = "d-inline-block float-right">
          <p><strong><%= number_to_currency((order.total_unpaid_shipping_amount / 100).to_f, unit: "£") %></strong></p>
        </div> 
      <% else %>
        <p>Please select shipping type</p>
      <% end %>
      <% if order.total_amount.present? %>
        <div class = "row">
          <div class = "col-12">
            <hr class = "booyah-line"/>
          </div>
        </div>
        <div class = "mt-1">
          <div class = "d-inline-block">
            <p><strong>Total: </strong></p>
          </div>
          <div class = "d-inline-block float-right">
            <p><strong><%= number_to_currency((order.total_amount / 100).to_f, unit: "£") %></strong></p>
          </div> 
        </div>
      <% end %>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <p><strong>Deliver to: &nbsp</strong></p>
        <% if order.shipping_address.present? %>
          <p><%= order.shipping_address.full_name %></p>
          <p><%= order.shipping_address.full_address_no_name %></p>
        <% else %>
          <p>Please select your shipping address</p>
        <% end %>
      </li>
    </ul>
  </div>
</div>
