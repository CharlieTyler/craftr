<div class = "background-lightgrey">
  <div class = "container">
    <div class = "row py-4">
      <div class = "col-md-4 mt-2">
        <div class="lyst-box px-3 py-3 h-100">
          <div class = "row">
            <div class = "col-4 display-v-middle text-center">
              <h1>ğŸšš</h1>
            </div>
            <div class = "col-8">
              <%= link_to account_orders_path do %>
                <h5 class="card-title">Your orders</h5>
                <p class="card-subtitle article-text mb-2 text-muted">View past orders or buy things again.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class = "col-md-4 mt-2">
        <div class="lyst-box px-3 py-3 h-100">
          <div class = "row">
            <div class = "col-4 display-v-middle text-center">
              <h1>ğŸ“’</h1>
            </div>
            <div class = "col-8">
              <%= link_to account_addresses_path do %>
                <h5 class="card-title">Your address book</h5>
                <p class="card-subtitle article-text mb-2 text-muted">Add, edit and delete addresses.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class = "col-md-4 mt-2">
        <div class="lyst-box px-3 py-3 h-100">
          <div class = "row">
            <div class = "col-4 display-v-middle text-center">
              <h1>ğŸ™‚</h1>
            </div>
            <div class = "col-8">
              <%= link_to edit_user_registration_path do %>
                <h5 class="card-title">Your profile</h5>
                <p class="card-subtitle article-text mb-2 text-muted">Edit account and login details.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class = "container mt-4">
  <div class = "row">
    <div class = "col-12">
      <h4>Favourite recipes</h4>
      <div class = "row">
        <% if @user.favourite_recipes.present? %>
          <%= render partial: "recipes/lister_recipe", collection: @user.favourite_recipes, as: :recipe %>
        <% else %>
          <div class = "col-12">
            <p class = "text-muted">You haven't favourited any recipes yet. Check them out <%= link_to "here",recipes_path, class: "text-primary" %></p>
          </div>
        <% end %>
      </div>

      <div class = "col-12">
        <hr class = "booyah-line my-3"/>
      </div>

      <h4>Favourite products</h4>
      <div class = "row">
        <% if @user.favourite_products.present? %>
          <%= render partial: "products/lister_item", collection: @user.favourite_products, as: :product, locals: {include_add_to_basket: true } %>
        <% else %>
          <div class = "col-12">
            <p class = "text-muted">You haven't favourited any products yet. Check them out <%= link_to "here",products_path, class: "text-primary" %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>