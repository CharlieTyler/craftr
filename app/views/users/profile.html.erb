<div class = "container">
  <div class = "row">
    <div class = "col-12">
      <div class = "d-inline-block">
        <h3><%= title 'me' %> - <%= @user.email %></h3>
      </div>
      <div class = "d-inline-block float-right">
        <p class = "text-primary"><%= link_to "Edit profile", edit_user_registration_path(@user) %></p>
      </div>
      <div class = "row">
        <div class = "col-12">
          <hr class = "booyah-line">
        </div>
      </div>
      <h1>My account</h1>
      <h4>Address book</h4>
      <div class = "row">
        <% if @user.addresses.present? %>
          <%= render partial: "account/addresses/lister_address", collection: @user.addresses, as: :address %>
        <% else %>
          <div class = "col-12">
            <p class = "text-muted">You haven't added any addresses yet.</p>
          </div>
        <% end %>
      </div>


      <h1>Favourites</h1>
      <h4>Favourite recipes</h4>
      <div class = "row">
        <% if @user.favourite_recipes.present? %>
          <%= render partial: "recipes/lister_recipe", collection: @user.favourite_recipes, as: :recipe %>
        <% else %>
          <div class = "col-12">
            <p class = "text-muted">You haven't favourited any recipes yet. Check them out <%= link_to "here",recipes_path, class: "text-primary" %></p>
          </div>
        <% end %>
      </div>

      <div class = "col-12">
        <hr class = "booyah-line my-3"/>
      </div>

      <h4>Favourite products</h4>
      <div class = "row">
        <% if @user.favourite_products.present? %>
          <%= render partial: "products/lister_item", collection: @user.favourite_products, as: :product %>
        <% else %>
          <div class = "col-12">
            <p class = "text-muted">You haven't favourited any products yet. Check them out <%= link_to "here",products_path, class: "text-primary" %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
