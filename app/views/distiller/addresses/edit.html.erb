<div class = "container">
  <div class = "row">
    <div class = "col-md-6 offset-md-3">
      <h1>New address</h1>
      <%= simple_form_for @address, url: distiller_address_path(@address) do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :phone_number %>
        <%= f.input :line_1 %>
        <%= f.input :line_2 %>
        <%= f.input :line_3 %>
        <%= f.input :post_town %>
        <%= f.input :postcode %>
        <%= f.submit "Update address", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
