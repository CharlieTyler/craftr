<div class = "container">
  <div class = "row">
    <div class = "col-md-6 offset-md-3">
      <h1>New address</h1>
      <%= simple_form_for @address, url: distiller_addresses_path do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :phone_number, hint: "Royal Mail require a phone number for delivering parcels" %>
        <%= f.input :line_1 %>
        <%= f.input :line_2 %>
        <%= f.input :line_3 %>
        <%= f.input :post_town %>
        <%= f.input :postcode %>
        <%= f.submit "Add address", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>