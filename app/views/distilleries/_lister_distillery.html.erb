<div class = "col-6 col-md-4 col-lg-3 my-2">
  <%= link_to distillery_path(distillery) do %>
    <div class="card h-100">
      <div class = "card-img-top">
        <%= image_tag distillery.image_1, class: "img-fluid" %>
      </div>
      <div class="card-block">
        <h4 class="card-title"><%= distillery.name %></h4>
        <p class="card-text"><%= truncate_html(distillery.summary_text, length: 100) %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted text-left"><%= pluralize(distillery.products.length, 'product') %> from <%= distillery.location %></li>
      </ul>
    </div>
  <% end %>
</div>
