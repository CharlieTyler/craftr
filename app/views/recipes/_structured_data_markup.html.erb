<script type="application/ld+json">
     {
        "@context": "http://schema.org/",
        "@type": "Recipe",
        "name": "<%= recipe.name %>",
        "image": "<%= recipe.image_url %>",
        "author": {
          "@type": "Person",
          "name": "<%= recipe.author.name %>"
        },
        "prepTime": "<%= recipe.prep_time_in_minutes.minutes.iso8601 %>",
        "recipeCuisine": "<%= recipe.cuisine %>",
        "datePublished": "<%= recipe.created_at.to_date %>",
        "description": "<%= recipe.description %>",
        "keywords": "<%= recipe.seo_keywords %>",
        "recipeCategory": "Cocktail",
        "recipeIngredient": <%= recipe.recipe_ingredients.map{|ri| "#{ri.quantity} #{ri.ingredient.name}"}.to_json.html_safe %>
         ,
        "recipeInstructions": [
            {
            "@type": "HowToStep",
            "text": "<%= strip_tags(recipe.method) %>"
            }
        ]
      }
</script>