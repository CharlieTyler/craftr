<div class="row hero-row py-5 bg-overlay" style="background: linear-gradient(rgba(365,365,365,0.5), rgba(365,365,365,0.9)), url('<%= recipe.image.url(:full).to_s %>'); background-position: center; background-repeat: no-repeat; background-size: cover;">
  <div class = "col-md-6 text-center">
    <div class = "row">
      <div class = "col-6 offset-3 col-md-8 offset-md-2">
        <%= link_to recipe_path(recipe) do %>
          <%= image_tag recipe.image_url(:full).to_s, class: "img-fluid image-border", lazy: true %>
        <% end %>
      </div>
    </div>
  </div>
  <div class = "col-md-6 text-center my-md-5 py-md-5">
    <h1 class = "my-3 display-4"><%= link_to recipe.name, recipe_path(recipe) %></h1>
    <% if recipe.author.present? %>
      <h2>by <%= link_to recipe.author.name, author_path(recipe.author), class: "text-primary" %></h2>
    <% end %>
    <p class = "article-text"><%= recipe.description %></p>
  </div>
</div>