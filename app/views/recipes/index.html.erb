<div class = "background-lightgrey">
  <div class = "container">
    <div class = "row">
      <div class = "col-12">
        <h4 class = "mt-3"><%= title 'Latest recipes' %></h4>
        <div class = "row">
          <%= render partial: "recipes/lister_recipe", collection: @recipes.first(2), as: :recipe %>
        </div>
        <% if @tags.length > 0 %>
          <div class = "col-12 lyst-box px-2 py-2">
            <h5 class = "">Top collections</h5>
            <% @tags.each do |tag| %>
              <%= link_to tag.name.capitalize, recipe_tag_path(tag.slug), class: "btn btn-secondary mt-2" %>
            <% end %>
          </div>
        <% end %>
        <div class = "row">
          <%= render partial: "recipes/lister_recipe", collection: @recipes.drop(2), as: :recipe %>
        </div>
        <div class = "row">
          <div class = "col-12 text-center">
            <%= will_paginate @recipes, :page_links => false %>
          </div>
        </div>
      </div>
    </div>
  </div> 
</div>

<script>
  $(function(){
    $('.owl-carousel.recipe-carousel').owlCarousel({
      stagePadding: 0,
      loop:true,
      dots: true,
      items: 1,
      nav: true,
      navText : ['<i class="fa fa-4x fa-angle-left" aria-hidden="true"></i>','<i class="fa fa-4x fa-angle-right" aria-hidden="true"></i>']
    });
  });
</script>
