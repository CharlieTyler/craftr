<% if user_signed_in? %>
  <% if current_user.favourited_recipe?(recipe) %>
    <%= link_to recipe_favourite_recipe_path(current_user.user_favourite_recipes.find_by(recipe: recipe), recipe_id: recipe.id), class: "btn-lg btn-primary favourite-button", method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true"></i> Favourited
    <% end %>
  <% else %>
    <%= link_to recipe_favourite_recipes_path(recipe_id: recipe.id), class: "btn-lg btn-primary favourite-button", method: :post, remote: true do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i> Favourite
    <% end %>
  <% end %>
<% else %>
  <%= link_to "Sign in to favourite", new_user_session_path, class: "btn-lg btn-primary" %>
<% end %>

<script>
  $('.favourite-button').click(function() {
    $('.favourite-button').html('<i class="fa fa-spinner fa-pulse" aria-hidden="true"></i>');
  });
</script>