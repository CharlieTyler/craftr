<% if user_signed_in? %>
  <% if current_user.favourited_recipe?(recipe) %>
    <%= link_to recipe_favourite_recipe_path(current_user.user_favourite_recipes.find_by(recipe: recipe), recipe_id: recipe.id), class: "col-12 px-0 article-text favourite-button", method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true"></i> Favourited
    <% end %>
  <% else %>
    <%= link_to recipe_favourite_recipes_path(recipe_id: recipe.id), class: "col-12 px-0 article-text favourite-button", method: :post, remote: true do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i> Favourite
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_user_registration_path, class: "col-12 px-0 article-text" do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i> + Sign up to favourite
  <% end %>
<% end %>

<script>
  $('.favourite-button').click(function() {
    $('.favourite-button').html('<i class="fa fa-spinner fa-pulse" aria-hidden="true"></i>');
  });
</script>