<div class = "col-md-6 my-2">
  <div class = "lyst-box card py-0">
    <div class = "row">
      <div class = "col-5">
        <%= link_to recipe_path(recipe) do %>
          <%= image_tag recipe.image_url(:full).to_s, class: "img-fluid" %>
        <% end %>
      </div>
      <div class = "col-7 px-1 py-3">
        <%= link_to recipe_path(recipe) do %>
          <h4 class="mb-2"><%= recipe.name %></h4>
        <% end %>
        <p class = "text-muted">by <%= link_to recipe.author.name, author_path(recipe.author) %></p>
        <p class=""><%= truncate_html(recipe.description, length: 100) %></p>
      </div>
    </div>
  </div>
</div>