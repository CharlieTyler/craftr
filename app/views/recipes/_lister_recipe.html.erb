<div class = "col-md-6 my-2">
  <div class = "lyst-box card py-0">
    <div class = "row">
      <div class = "col-5">
        <%= link_to recipe_path(recipe) do %>
          <%= image_tag recipe.image_url(:full).to_s, class: "image-fill-height" %>
        <% end %>
      </div>
      <div class = "col-7 pl-1 pr-4 py-3">
        <div class = "mr-1">
          <%= link_to recipe_path(recipe) do %>
            <h4 class="mb-2"><%= recipe.name %></h4>
          <% end %>
          <p class = "text-muted card-text">by 
            <% if recipe.author.distillery.present? %>
              <%= link_to recipe.author.name, distillery_path(recipe.author.distillery) %>
            <% else %>
              <%= link_to recipe.author.name, author_path(recipe.author) %>
            <% end %>              
          </p>
          <p class= "hidden-xs-down card-text"><%= truncate_html(recipe.description, length: 100) %></p>
        </div>
      </div>
    </div>
  </div>
</div>