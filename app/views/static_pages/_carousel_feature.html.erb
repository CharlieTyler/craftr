<div class="row hero-row py-5 bg-overlay" style="background: linear-gradient(rgba(365,365,365,0.5), rgba(365,365,365,0.9)), url('<%= carousel_feature.image_url(:full).to_s %>'); background-position: center; background-repeat: no-repeat; background-size: cover;">
  <div class = "col-md-6 text-center">
    <div class = "row">
      <div class = "col-6 offset-3 col-md-8 offset-md-2">
        <%= link_to "#{carousel_feature.link_url}" do %>
          <%= image_tag carousel_feature.image_url(:square).to_s, class: "img-fluid image-border" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class = "col-md-6 text-center my-md-5 py-md-5">
    <h1 class = "js-animate-me animated"><span class = ""><%= simple_format carousel_feature.line_1 %></span></h1>
    <h3 class = "js-animate-me2 animated"><%= simple_format carousel_feature.line_2 %></h3>
    <%= link_to carousel_feature.cta_text, "#{carousel_feature.link_url}", class: "btn btn-lg btn-primary my-3" %>
  </div>

  <!-- Admin options -->
  <% if user_signed_in? && current_user.admin %>
    <div class = "col-md-6 offset-md-3">
      <h6>Admin functions</h6>
      <div class = "row">
        <div class = "col-6">
          <%= link_to "Edit", edit_admin_carousel_feature_path(carousel_feature), class: "btn btn-secondary col-10 offset-1" %>
        </div>
        <div class = "col-6">
          <%= link_to "Delete", admin_carousel_feature_path(carousel_feature), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger col-10 offset-1" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
