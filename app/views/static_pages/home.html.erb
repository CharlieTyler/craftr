<div class = "container-fluid">
  <div class = "owl-carousel owl-theme hero-carousel">
    <div class = "row hero-row">
      <div class = "col-6" style="background: transparent url(<%= image_url('hero_image_1.jpg') %>) no-repeat center center /cover">

      </div>
      <div class = "col-6 text-center py-md-5 px-2 px-md-5">
        <h1>Craft spirits straight from our partner distilleries</h1>
        <%= link_to 'Our products', products_path, class: "btn btn-primary my-3" %>
      </div>
    </div>
    <div class = "row hero-row">
      <div class = "col-6" style="background: transparent url(<%= image_url('recipe_hero.jpg') %>) no-repeat center center /cover">

      </div>
      <div class = "col-6 text-center py-md-5 px-2 px-md-5">
        <h1>Cocktail recipes from our brilliant mixologists</h1>
        <%= link_to 'Recipes', recipes_path, class: "btn btn-primary my-3" %>
      </div>
    </div>
    <div class = "row hero-row">
      <div class = "col-6" style="background: transparent url(<%= image_url(@featured_product.product_images.first.photo) %>) no-repeat center center /cover">

      </div>
      <div class = "col-6 text-center py-md-5 px-2 px-md-5">
        <h1>Featured product</h1>
        <h3>Hills and harbour gin</h3>
        <%= link_to 'Learn more', product_path(@featured_product), class: "btn btn-primary my-3" %>
      </div>
    </div>

  </div>
</div>

<!-- Categories -->
<div class = "background-grey">
  <div class = "container py-3">
    <div class = "row">
      <div class = "col">
        <h1>Our categories</h1>
        <div class = "row py-3 text-center">
          <%= render partial: "categories/lister_category", collection: @featured_categories, as: :category %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recipes -->
<div class = "">
  <div class = "container py-3">
    <span class = "">
      <h1>Latest recipes</h1>
    </span>
    <div class = "row text-center">
      <div class = "col-md-10 offset-md-1">
        <div class = "row">
          <%= render partial: "recipes/lister_recipe", collection: @recipes, as: :recipe %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Products -->
<div class = "products-background background-grey">
  <div class = "container py-3">
    <span class = "">
      <h1>Featured products</h1>
    </span>
    <div class = "row text-center">
      <div class = "col-md-10 offset-md-1">
        <div class = "row">
          <%= render partial: "products/lister_item", collection: @featured_products, as: :product %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recently viewed -->
<% if user_signed_in? && current_user.recently_viewed_products.present? %>
  <div class = "products-background background-grey">
    <div class = "container py-3">
      <span class = "">
        <h1>Recently viewed</h1>
      </span>
      <div class = "row text-center">
        <div class = "col-md-10 offset-md-1">
          <div class = "row">
            <%= render partial: "products/lister_item", collection: current_user.recently_viewed_products, as: :product %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class = "py-3">
  <div class = "container">
    <h1>Recent instagrams</h1>
    <h6 class = "text-muted"><%= link_to "@craftrspirits", "http://instagram.com/craftrspirits" %></h6>
    <div class = "row">
      <%= render partial: "static_pages/instagram_tile", collection: @instas.data, as: :insta %>
    </div>
  </div>
</div>

<script>
  $('.owl-carousel.hero-carousel').owlCarousel({
    stagePadding: 0,
    loop:true,
    dots: true,
    items: 1,
    nav: true
  });
</script>