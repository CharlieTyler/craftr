<p class="mt-3 alert alert-info">Just your email, a password and some T&Cs</p>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, :input_html => { :class => 'signup-email-field' } %>
    <%= f.input :password, required: true, label: "Create a password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :age_verified, required: true, label: "I am older than the legal drinking age in my country of residence" %>
    <%= f.input :privacy_policy_accepted, required: true, label: "I have read and agree to the #{(link_to "privacy policy", privacy_policy_path, class: "text-primary", :target => "_blank")}".html_safe %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn-lg btn-success col-12" %>
  </div>
<% end %>