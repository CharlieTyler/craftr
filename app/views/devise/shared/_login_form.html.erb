<p class="mt-3 alert alert-info">Already a member? Log in below.</p>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false, label: ("Password (#{link_to 'Forgot?', new_password_path(resource_name)})").html_safe %>
    <%= f.input :remember_me, as: :boolean, :input_html => { :checked => true } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn-lg btn-primary col-12" %>
  </div>
<% end %>