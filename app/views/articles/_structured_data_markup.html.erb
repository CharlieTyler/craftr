<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "NewsArticle",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "<%= article_url(article) %>"
  },
  "headline": "<%= article.title %>",
  "image": [
    "<%= article.image_first_url %>"
   ],
  "datePublished": "<%= article.created_at %>",
  "dateModified": "<%= article.updated_at %>",
  "author": {
    "@type": "Person",
    "name": "<%= article.author.name %>"
  },
   "publisher": {
    "@type": "Organization",
    "name": "Craftr",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.craftr.co.uk/assets/CraftrLogoPNG-a845bce75fd347bc39189152cc52e248af06ea52e2036f48bc1375dba1025a55.png"
    }
  },
  "description": "<%= article.description %>"
}
</script>
