<div class = "container-fluid">
  <div class="row py-5" style="background:transparent url('<%= @article.banner_image.url %>') no-repeat center center /cover">
    <div class = "col-md-8 offset-md-2 text-center">
      <h1 class = "py-5 text-white display-4"><span class = "background-translucent-black px-3 py-2"><%= @article.title %></span></h1>
      <h6 class = "pb-5 text-white"><span class = "background-translucent-black px-3 py-2"><%= @article.description %></span></h6>
    </div>
  </div>
</div>
<div class = "background-grey">
  <div class = "container">
    <div class = "row">
      <div class = "col-md-10 offset-md-1">
        <div class = "row">
          <div class = "col-6">
            <p class = "article-text">
              <%= simple_format(@article.description_first) %>
            </p>
          </div>
          <div class = "col-6">
            <%= image_tag @article.image_first, class: "d-block img-fluid" %>
          </div>
        </div>
        <div class = "row">
          <% if @article.description_second.present? %>
            <div class = "col-6">
              <p class = "article-text">
                <%= simple_format(@article.description_second) %>
              </p>
            </div>
          <% end %>
          <% if @article.image_second.present? %>
            <div class = "col-6">
              <%= image_tag @article.image_second, class: "d-block img-fluid" %>
            </div>
          <% end %>
        </div>
        <div class = "row">
          <% if @article.description_third.present? %>
            <div class = "col-6">
              <p class = "article-text">
                <%= simple_format(@article.description_third) %>
              </p>
            </div>
          <% end %>
          <% if @article.image_third.present? %>
            <div class = "col-6">
              <%= image_tag @article.image_third, class: "d-block img-fluid" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Joins -->
<div class = "container">
  <div class = "row">
    <div class = "col-md-10 offset-md-1">
      <% if @article.products.present? %>
        <h4>Related products</h4>
        <div class = "row py-2"> 
          <%= render partial: 'products/lister_item', collection: @article.products, as: :product %>
        </div>
      <% end %>
      <% if @article.recipes.present? %>
        <h4>Related recipes</h4>
        <div class = "row py-2">
          <%= render partial: 'recipes/lister_recipe', collection: @article.recipes, as: :recipe %>
        </div>
      <% end %>
      <% if @article.distilleries.present? %>
        <h4>Related distilleries</h4>
        <div class = "row py-2"> 
          <!-- Should probably make a distilleries lister -->
        </div>
      <% end %>
      <% if @article.categories.present? %>
        <h4>Related categories</h4>
        <div class = "row py-2"> 
          <!-- Should probably make a categories lister -->
        </div>
      <% end %>
    </div>
  </div>
</div>

