<div class = "<%= 'my-2 col-6 col-md-' + md_upwards_col ||= 4.to_s %>">
  <%= link_to article_path(article) do %>
    <div class="card h-100">
      <div class = "card-img-top">
        <%= image_tag article.banner_image_url(:preview), class: "img-fluid" %>
      </div>
      <div class="card-block">
        <h4 class="card-title"><%= article.title %></h4>
        <p class="card-text"><%= truncate_html(article.description, length: 100) %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><em><%= article.read_time %> minute read</em></li>
      </ul>
    </div>
  <% end %>
</div>
