<div class = "container">
  <div class = "row">
    <div class = "col-12">
      <h4>My orders</h4>
      <div class = "row">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Products</th>
              <th scope="col">Price</th>
              <th scope="col">Delivery</th>
              <th scope="col">Total</th>
              <th scope="col">View</th>
            </tr>
          </thead>
          <tbody>
            <% if @orders.present? %>
              <% @orders.each do |order| %>
                <tr>
                  <th scope="row"><%= order.created_at.strftime('%B %d, %Y') %></th>
                  <td><%= order.product_summary %></td>
                  <td><%= number_to_currency((order.total_paid_product_amount / 100).to_f, unit: "£") %></td>
                  <td><%= number_to_currency((order.paid_shipping_price / 100).to_f, unit: "£") %></td>
                  <td><strong><%= number_to_currency((order.total_paid_amount / 100).to_f, unit: "£") %></strong></td>
                  <td class = "table-success"><strong><%= link_to "View order", account_order_path(order) %></strong></td>
                </tr>
              <% end %>
            <% else %>
              <p>You have no orders</p>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
