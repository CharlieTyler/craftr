<div class = "col-6 col-md-4 my-2">
  <div class="card h-100">
    <div class="card-block">
      <div class="card-text">
        <p><strong><%= address.full_name %></strong></p>
        <p><%= address.line_1 %></p>
        <p><%= address.line_2 %></p>
        <p><%= address.line_3 %></p>
        <p><%= address.post_town %></p>
        <p><%= address.postcode %></p>
      </div>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= link_to "Edit", edit_account_address_path(address), class: "btn btn-secondary mx-1" %><%= link_to "Delete", account_address_path(address), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger mx-1" %></li>
    </ul>
  </div>
</div>
