<div class = "<%= 'my-2 col-6 col-md-' + md_upwards_col ||= 4.to_s %>">
  <%= link_to category_path(category) do %>
    <div class="card h-100">
      <div class = "card-img-top">
        <%= image_tag category.banner_image_url(:full).to_s, class: "img-fluid" %>
      </div>
      <div class="card-block">
        <h4 class="card-title"><%= category.name %></h4>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><em><%= pluralize(category.products.size, 'product') %></em></li>
        <li class="list-group-item text-muted"><em><%= pluralize(category.recipes.size, 'recipe') %></em></li>
        <li class="list-group-item text-muted"><em><%= pluralize(category.articles.size, 'article') %></em></li>
      </ul>
    </div>
  <% end %>
</div>
